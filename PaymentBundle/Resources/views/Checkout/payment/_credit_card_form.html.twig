{% form_theme form 'CoreBundle:Form:base.fields.html.twig' %}

<div class="payment-container-form" id="paypal-direct-payment" >
 
    {{ form_start(form, {
                    'action': path('payment_checkout_summary'), 
                    'method': 'post', 
                    'attr': {'class': ''}
                } ) }}
        {{ form_errors(form) }}

            {{ form_row(form.firstname, {'label': 'firstname' | trans }) }}
            {{ form_row(form.lastname, {'label': 'lastname' | trans }) }}
            {{ form_row(form.cardType) }}
            {{ form_row(form.cardNo) }}
             <div class="form-group">
              {{ form_label(form.expirationDate, null, { label_attr: {class: 'col-sm-4 control-label'} }) }}
              <div class="col-sm-8">
                {{ form_widget(form.expirationDate.day, { attr:  {style: 'display:none'} } ) }}
                {{ form_widget(form.expirationDate.month, { attr:  {class: 'form-control'} } ) }}
                {{ form_widget(form.expirationDate.year, { attr:  {class: 'form-control'} } ) }}
              </div>
            </div>

            <div class="form-group">
              {{ form_label(form.CVV, null, { label_attr: {class: 'col-sm-4 control-label'} }) }}
              <div class="col-sm-8">
                  {{ form_widget(form.CVV, { attr: {class: 'form-control'} }) }}<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
              </div>
            </div>  

            {{ form_row(form.CVV) }}
            {{ form_row(form.ts) }}
            
            {{ include(template_from_string('<div class="col-sm-12 priceAndCheck">
                <div class="price">
                    <span>{{ "checkout.amount" | trans }}:</span>
                    <strong style="margin-right: 15px;">{{ totals.amount | price }}</strong>
                    <button >{{ "checkout.confirm" | trans }}</button>
                </div>
                <a href="{{ path(\'payment_checkout_deliveryinfo\') }}" class="btn btn-primary" title="{{ "back" | trans }}">{{ "back" | trans }}</a>
            </div>')) }}
        
             
            {{ form_rest(form) }}
    {{ form_end(form) }}

 
</div>

     

    

